<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
    </style>
    <style name="textStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">15dp</item>
    </style>
    
    <style name="title_text_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="button_text_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="content_text_style">
        <item name="android:textColor">@color/content_text_color</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingBottom">3dp</item>

    </style>

</resources>
