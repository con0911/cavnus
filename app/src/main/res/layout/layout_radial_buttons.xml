<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:layout_width="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/btn_orange"
        android:visibility="invisible"
        android:layout_margin="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/states_circle_orange"
        android:gravity="right|center"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:minHeight="100dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:rotation="-70"
            android:layout_weight="0.22" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_yellow"
        android:layout_margin="0dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/states_circle_yellow"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="80dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:layout_weight="0.37" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_green"
        android:layout_margin="0dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/states_circle_green"
        android:gravity="center_vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="98dp"
            android:text="Green"
            android:clickable="true"
            android:paddingTop="32dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginRight="75dp"
            android:rotation="70"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_icon_app"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"/>


    <TextView
        android:id="@+id/family_name"
        android:layout_width="wrap_content"
        android:text="Unknown"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center"
        android:layout_height="wrap_content" />

    <!--<include
        android:id="@+id/btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/center_button"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"/>-->


</FrameLayout>