<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <rotate
            android:fromDegrees="240"
            android:toDegrees="359"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/circle_darker_yellow"/>
    </item>
    <item >
        <rotate
            android:fromDegrees="250"
            android:toDegrees="359"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/circle_yellow"/>
    </item>
</selector>